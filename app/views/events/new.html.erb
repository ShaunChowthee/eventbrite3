<h1>Create your event</h1>
<%if user_signed_in?%>
  <%= form_for(@event) do |f| %>
    <div class="field">
      <%= f.label :start_date %>
      <%= f.datetime_local_field :start_date %>
    </div>
    <div class="field">
      <%= f.label :duration %>
      <%= f.number_field :duration %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <%= f.hidden_field :admin_id, value: current_user.id %>
    <div class="actions">
      <%= f.submit "Create Event" %>
    </div>
  <%end%>

<%else%>
  <p>Please <%= link_to "sign in", new_user_session_path %> or <%= link_to "create an account", new_user_registration_path %> to create an event.</p>
<%end%>
